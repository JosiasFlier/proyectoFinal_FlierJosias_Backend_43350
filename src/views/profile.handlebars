<div>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Perfil de Usuario</h1>
                <p class="card-text">Nombre: {{ userData.first_name }}</p>
                <p class="card-text">Apellido: {{ userData.last_name }}</p>
                <p class="card-text">Correo electrónico: {{ userData.email }}</p>
                <p class="card-text">Edad: {{ userData.age }}</p>
                <form action="/api/sessions/logout" method="GET">
                    <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Incluye Bootstrap JS (opcional) -->
